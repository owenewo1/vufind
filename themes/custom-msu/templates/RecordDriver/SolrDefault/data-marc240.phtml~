<?php
try {
    $marcReader = $this->driver->getMarcReader();
    if ($marcReader) {
        $fields240 = $marcReader->getFields('240');
        if (count($fields240) > 0) {
            foreach ($fields240 as $field) {
                $subfield_a = $field->getSubfield('a');
                if ($subfield_a) {
                    echo htmlspecialchars($subfield_a->getData());
                }
            }
        }
    }
} catch (Exception $e) {
    echo "Error: " . $e->getMessage();
}
?>
